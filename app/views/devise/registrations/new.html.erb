<div id="login">
  <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
    <fieldset class="clearfix">
      <p>
				<span class="fontawesome-user"></span>
				<%= f.email_field :email, autofocus: true, placeholder: "Email" %>
			</p>
      <p>
				<span class="fontawesome-lock"></span>
				<%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
			</p>
      <p>
				<span class="fontawesome-lock"></span>
				<%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirm" %>
			</p>
      <p>
				<span class="fontawesome-user"></span>
				<%= f.text_field :first_name, autofocus: true, placeholder: "First name" %>
			</p>
      <p>
				<span class="fontawesome-user"></span>
				<%= f.text_field :last_name, autofocus: true, placeholder: "Last name" %>
			</p>
      <p><input type="submit" value="Done"></p>
    </fieldset>
  <% end %>
  <%= render "devise/shared/links" %>
</div>