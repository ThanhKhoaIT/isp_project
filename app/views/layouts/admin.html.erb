<!DOCTYPE html>
<html>
<head>
	<title>Admin | FlyAndStay LTD</title>
	<%= stylesheet_link_tag    'admin', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'admin', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<div id="top-nav" class="navbar navbar-inverse navbar-static-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-toggle"></span>
				</button>
				<a class="navbar-brand" href="/admin">FlyAndStay LTD</a>
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav navbar-right">
      
					<li class="dropdown">
						<a class="dropdown-toggle" role="button" data-toggle="dropdown" href="#">
							<i class="glyphicon glyphicon-user"></i> <%= current_user.full_name %> <span class="caret"></span></a>
							<ul id="g-account-menu" class="dropdown-menu" role="menu">
								<li><a href="#">My Profile</a></li>
								<li><a href="/users/sign_out" data-method="delete"><i class="glyphicon glyphicon-lock"></i> Logout</a></li>
							</ul>
						</li>
					</ul>
				</div>
			</div>
		</div>
		
		<div class="container">
			<div class="row">
				<div class="col-sm-3">
					<!-- left -->
					<h3><i class="glyphicon glyphicon-briefcase"></i> Modules</h3>
					<hr>
					<ul class="nav nav-stacked">
						<li><a href="/admin/cities"><i class="glyphicons google_maps"></i> Cities</a></li>
						<li><a href="/admin/flights"><i class="glyphicons airplane"></i> Flights</a></li>
						<li><a href="/admin/packages"><i class="glyphicon glyphicon-list-alt"></i> Packages</a></li>
						<li><a href="/admin/contacts"><i class="glyphicon glyphicon-book"></i> Contacts</a></li>
						<li><a href="/admin/requests"><i class="glyphicons sun"></i> Package by request</a></li>
					</ul>
    
					<hr>
    
				</div>
				<div class="col-sm-9">
					<%= yield %>
				</div>
			</div>
		</div>
		<footer class="text-center">Admin Panel for FlyAndStay LTD
			<a href="http://isp-app.tk"><strong>http://isp-app.tk</strong></a>
		</footer>
	</body>
	</html>
