<div class="bg_cont1">
	<div class="bg_cont">
		<section id="content">
			<div class="main">
				<div class="inside">
					<h2>Packages</h2>
					<div class="container_16">
						
						<div class="container">
							<% @packages.each do |package| %>
							<div class="grid_5">
								<% if package.discount.present? %>
									<strong class="discount">-<%= package.discount %>$</strong>
								<% end %>
								<a href="/packages/<%= package.id %>">
									<img class="img-indent" src="<%= package.image.url(:medium) %>" alt="">
								</a><br>
								<strong class="txt"><%= package.description %></strong>
							</div>
							<% end %>
						</div>
						
						<div class="paginations"></div>
						
					</div>	
				</div>
			</div>
		</section>
	</div>
</div>

<script>
$(".paginations").pagination({
  items: <%= @packages_count %>,
  itemsOnPage: 6,
	currentPage: <%= params[:page] || 1 %>,
	hrefTextPrefix: "?page=",
  cssStyle: 'light-theme'
});
</script>